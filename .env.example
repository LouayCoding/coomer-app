# =====================================================
# COOMER APP - ENVIRONMENT VARIABLES
# =====================================================
# Kopieer dit bestand naar .env.local en vul de waarden in

# =====================================================
# SUPABASE CONFIGURATIE
# =====================================================
# Ga naar: https://supabase.com/dashboard → Project → Settings → API

# Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Anon/Public Key (veilig voor client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key (ALLEEN server-side - NOOIT delen!)
SUPABASE_SERVICE_KEY=your-service-role-key-here

# =====================================================
# APP CONFIGURATIE
# =====================================================

# App URL (voor redirects)
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =====================================================
# COOMER API CONFIGURATIE
# =====================================================

# Coomer API Base URL
NEXT_PUBLIC_API_URL=https://coomer.st/api/v1

# Session Cookie voor Coomer API (optioneel)
SESSION_COOKIE=your-session-cookie-here

# =====================================================
# CACHE SETTINGS (optioneel)
# =====================================================

# Cache TTL in milliseconds
CACHE_TTL_POSTS=900000
CACHE_TTL_CREATORS=1800000
CACHE_TTL_POPULAR=300000

# =====================================================
# PERFORMANCE SETTINGS (optioneel)
# =====================================================

POSTS_PER_PAGE=25
CREATORS_PER_PAGE=50
