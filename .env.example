# Production Environment
NODE_ENV=production

# Coomer API Base URL
NEXT_PUBLIC_API_URL=https://coomer.st/api/v1

# Session Cookie (optional - for authenticated requests)
# Get this from your browser's developer tools when logged into coomer.st
SESSION_COOKIE=your_session_cookie_here

# Cache Settings (in milliseconds)
CACHE_TTL_POSTS=900000        # 15 minutes
CACHE_TTL_CREATORS=1800000    # 30 minutes
CACHE_TTL_POPULAR=300000      # 5 minutes

# Performance Settings
POSTS_PER_PAGE=25
CREATORS_PER_PAGE=50

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
